{
  "manifest_version": 3,
  "name": "秋月電子 領収書エクスポーター",
  "version": "1.0",
  "description": "秋月電子通商の注文履歴から領収書・納品書・請求書を一括ダウンロードします。",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "debugger"
  ],
  "host_permissions": [
    "https://akizukidenshi.com/*",
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://akizukidenshi.com/catalog/customer/history.aspx*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
